#include <stdio.h>

#define MAX 30

char input[MAX];
char result[MAX];

void input_func(void)
{
	scanf("%s",input);
}

void letter_change(void)
{
	int c = 0;
	int i = strlen(input);
	while(c != i)
	{
		if(isupper(input[c]) == 1)
		{
			result[c]=tolower(input[c]);
		}
		else
		{
			result[c]=toupper(input[c]);

		}
		c++;
	}
}

void print(void)
{
	printf("input:  %s\n",input);
	printf("output: %s\n",result);
}

int main(void)
{
	input_func();
	letter_change();
	print();

	return 0;
}

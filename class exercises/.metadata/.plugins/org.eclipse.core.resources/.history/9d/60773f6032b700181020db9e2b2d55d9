#include <stdio.h>

int main(void)
{

	// Asignment a
	char name[20];
	char first[20];
	char last[20];

	printf("Write your name:\n");
	scanf("%s", name);
	printf("Your name in quotation signs. \n");
	printf("\"%s\"\n\n", name);

	//Asignment b

	printf("Your name to the right, in a 20 sign space.\n");
	printf("\"%20s\"\n\n", name);

	//Asignment c

	printf("Your name to the left, in a 20 sign space.\n");
	printf("\"%-20s\"\n\n", name);

	//Asignment d

	printf("Your name with 3 spaces in front.\n");
	printf("   %s\n\n", name);

	printf("Enter your first and last name:");
	scanf("%s", first);
	scanf("%s", last);
	printf("Is your name %s %s?", first, last);

	return 0;
}

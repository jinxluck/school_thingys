#include <stdio.h>

#define MAX 30

char input[MAX];
char result[MAX];

void input_func(void)
{
	scanf("%s",&input);
}

void letter_change(void)
{
	int c = 0;
	int i = strlen(input);
	while(c != i)
	{
		if(isupper(input(c)) == 1)
			result(c)=tolower(input(c));

	}
}
